<form name="profileForm" method="POST" class="form-horizontal">
    <div class="modal fade" id="profileForm" tabindex="-1" role="dialog" aria-labelledby="profileFormLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="profileFormLabel">ユーザー情報</h4>
                </div>
                <div id="profiletDiv" class="modal-body">
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="inputName">ユーザー名</label>
                        <div class="col-sm-8">
                            <span id="name"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="inputEmail">Eメール</label>
                        <div class="col-sm-8">
                            <span id="mailAddress"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="title"></label>
                        <div class="col-sm-8">
                            <span id="role"></span>
                        </div>                            
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="inputPassword">パスワード</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="accountPassword" name="password" placeholder="8-20文字で入力してください" maxlength=20>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="inputPassword">確認用</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="accountPasswordConfirm" name="passwordConfirm" placeholder="確認用です"  maxlength=20>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
                    <button disabled type="button" id="accountCompleteButton" data-dismiss="modal" class="btn btn-primary" >更新する</button>
                </div>
            </div>
        </div>
    </div>
</form>