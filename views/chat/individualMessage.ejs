<div id="individualMessageDiv" class="individualMessage" style="display: none;">
    <div class="panel panel-info">
        <div class="panel-heading">
            <span id="individualname"></span>さんへのメッセージ
            <button name="individualClose" type="button" class="close">&times;</button>
        </div>
        <div class="panel-body" >
            <textarea name="individualMessage" id="individualMessage" class="form-control"></textarea>
        </div>
        <div class="panel-footer">
            <button name="individualClose" type="button" class="btn btn-default">閉じる</button>
            <button id="individualSend" class="btn btn-primary">送信する</button>
        </div>
    </div>
</div>
<script>
    $("#individualMessageDiv").draggable();
</script>